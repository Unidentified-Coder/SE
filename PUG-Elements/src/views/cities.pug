extends layout.pug

block head
  link(rel="stylesheet", href="/cities.css")
  link(rel="stylesheet", href="/filter.css")

block content
  h2 Cities 
  button(onclick="filter()") Filter
  table
    thead
      tr
        th| ID
        th.text-center| Country Code
        th| City
        th| District
        th| Population
    tbody
      each row, i in rows
        tr
          td.fit
            a(href=`/cities/${i + 1}`) #{i + 1}
          td.fit #{row.CountryCode}
          td #{row.Name}
          td #{row.District}
          - const population = new Intl.NumberFormat().format(row.Population);
          td.fit.number #{population}
