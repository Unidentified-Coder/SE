extends layout

block head
  link(rel="stylesheet", href="/cities.css")

block content
  style.
    body {
      background-image: url('kjopo.jpg');
      background-size: cover; /* Adjust this property as needed */
    }

    table {
      background-color: rgba(255, 255, 255, 0.9); /* Adjust the alpha value for transparency */
    }

  h2 Cities 

  // Add a form for population sorting
  form(action="/cities" method="get")
    label(for="sort") Sort by Population:
    select(name="sort" id="sort")
      option(value="none" selected) None
      option(value="asc") Lowest to Highest
      option(value="desc") Highest to Lowest
    button(type="submit" id="apply-filter") Apply

  table
    thead
      tr
        th| ID
        th.text-center| Country Code
        th| City
        th| District
        th| Population
    tbody
      each row, i in rows
        tr
          td.fit
            a(href=`/cities/${i + 1}`) #{i + 1}
          td.fit #{row.CountryCode}
          td #{row.Name}
          td #{row.District}
          - const population = new Intl.NumberFormat().format(row.Population);
          td.fit.number #{population}
